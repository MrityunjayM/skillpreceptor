<%- include("../layouts/header"); -%>
    <section class="container-fluid py-5">
        <div class="row">
            <div class="col col-3">
                <%- include('../partials/adminSideBar')%>
            </div>
            <div class="col col-9">
                <div class="card">
                    <form method="post" action="/portfolio/edit/<%=portfolio._id%>?_method=PUT" class="needs-validation"
                        enctype="multipart/form-data" nonvalidate>
                        <div class="row">
                            <div class="form-group mb-3 mx-3">
                                <label for="name" class="form-label">Instructor</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Name of instructor" value="<%=portfolio.name%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="form-group mb-2 mx-3">
                                <label for="image">Image</label>
                                <input type="file" class="form-control" name="image" id="img"
                                    value="<%=portfolio.image%>">
                            </div>

                            <div class="form-group mb-3 mx-3">
                                <label for="qualification" class="form-label">Qualification</label>
                                <input type="text" class="form-control" id="qualification" name="qualification"
                                    placeholder="Qualification" value="<%=portfolio.qualification %>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group mb-3 mx-3">
                                <label for="designation" class="form-label">Designation</label>
                                <input type="text" class="form-control" id="designation" name="designation"
                                    placeholder="Designation" value="<%=portfolio.designation%>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="form-group mb-3 mx-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" id="description" class="form-control" cols="30" rows="10"
                                    placeholder="Description"><%=portfolio.description%></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group mb-3 mx-3">
                                <label for="cars">Choose profile visibility:</label>

                                <select name="visible" id="visible" value="<%=portfolio.visible%>">
                                    <% if(portfolio.visible=="yes" ) {%>
                                        <option value="Yes" selected>Yes</option>
                                        <option value="No">No</option>
                                        <% }else{ %>
                                            <option value="Yes">Yes</option>
                                            <option value="No" selected>No</option>
                                            <% } %>
                                </select>

                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">update portfolio</button>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <!-- Bootstrap Form Validation Plugin -->
    <%- include('../partials/form-validation') %>

        <%- include("../layouts/footer"); -%>