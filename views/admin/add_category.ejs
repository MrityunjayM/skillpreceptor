<%- include("../layouts/header"); -%>

    <section class="container-fluid py-5">
        <div class="row">
            <div class="col col-3">
                <%- include('../partials/adminSideBar')%>
            </div>
            <div class="col col-9">
                <div class="container main-title">
                    <h2 class="page-title">Add Industry</h2>
                    <a href="/admin/allcategories" class="btn btn-sm btn-secondary mt-2">Back to all Industries</a>
                </div>
                <br />
                <div class="container">
                    <form method="post" action="/admin/add-category">
                        <div class="row">
                            <div class="col-md-5">
                                <label for="nameofdepartment">Title</label>
                                <input class="form-control rounded-0" type="text" name="nameofdepartment"
                                    id="nameofdepartment" placeholder="Enter Name of Industry">
                            </div>
                            <div class="col-md-5">
                                <label for="order">Order</label>
                                <input class="form-control rounded-0" type="number" name="order" id="order"
                                    placeholder="Specify Order">
                                <div class="form-text">This is the position in which the industry will be shown.</div>
                            </div>
                        </div>
                        <br />
                        <button class="btn btn-secondary mt-2" type="submit">ADD</button>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <%- include("../layouts/footer"); -%>