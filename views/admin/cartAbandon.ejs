<%- include("../layouts/header"); -%>

    <section class="container-fluid py-5">
        <div class="row">
            <div class="col col-3">
                <%- include('../partials/adminSideBar')%>
            </div>
            <div class="col col-9">
                <a href="/admin" class="btn btn-sm btn-secondary mb-3">Go Back</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name of User</th>
                            <th>CartAbandon</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach(e=>{ %>
                            <tr>
                                <td>
                                    <%= e?.firstname +' '+ e?.lastname%> </td>
                                <td>
                                    <a href="/cart/all?id=<%=e._id %>">Click here to user' s cart</a>
                                </td>
                            </tr>

                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <%- include("../layouts/footer"); -%>