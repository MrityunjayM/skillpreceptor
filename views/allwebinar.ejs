<%- include("./layouts/header"); -%>

    <div class="container-fluid my-3">
        <div class="row">
            <div class="col filter-grid">
                <h3 class="mt-2">Filter By:</h3>
                <h4>Industry</h4>
                <ul class="list-group rounded-0 mb-3">
                    <%department.forEach(e=>{%>
                        <li class="list-group-item font-sans-serif fw-bold fs-md-0">
                            <input class="form-check-input me-1" type="checkbox" name="categoryId" id="category"
                                value="<%=e._id%>" <%=(categoryNames?.includes(e.nameofdepartment))?'checked':''%> />
                            <%= e.nameofdepartment %>
                        </li>
                        <% }) %>
                </ul>
                <!-- Filtering By Month -->
                <h4>Month</h4>
                <ul class="list-group rounded-0 mb-3">
                    <li class="list-group-item font-sans-serif fw-bold fs-md-0">
                        <input class="form-check-input me-1" type="checkbox" value="current" name="month" id="month"
                            <%=selectedMonth.includes('current')?'checked':'' %>/>
                        Current Month
                    </li>
                    <li class="list-group-item font-sans-serif fw-bold fs-md-0">
                        <input class="form-check-input me-1" type="checkbox" value="next" name="month" id="month"
                            <%=selectedMonth.includes('next')?'checked':'' %>/>
                        Next Month
                    </li>
                    <li class="list-group-item font-sans-serif fw-bold fs-md-0">
                        <input class="form-check-input me-1" type="checkbox" value="nextofnext" name="month" id="month"
                            <%=selectedMonth.includes('nextofnext')?'checked':'' %>/>
                        Next of Next Month
                    </li>
                </ul>
            </div>
            <div class="col">
                <!-- ============================================-->
                <!-- <section> begin ============================-->
                <section class="py-6">
                    <div class="container">
                        <div class="row">
                            <% allWebinar.filter(({status})=> status == 'Live').forEach((webinar)=> { %>
                                <div class="col-sm-6 col-lg-4 mb-4 scale">
                                    <div class="card border-0 h-100">
                                        <div class="position-relative">
                                            <img class="w-100"
                                                src="<%=webinar.image.filename? '/images/'+webinar.image.filename:webinar.image.url%>"
                                                alt="<%= webinar.image.filename%>" width="250" height="210" />
                                            <div class="course-logo">
                                                <img src="<%= webinar?.portfolio?.image?.filename? '/images/'+webinar?.portfolio?.image?.filename : webinar?.portfolio?.image?.url%>"
                                                    alt="logo" width="68" height="68" />
                                            </div>
                                        </div>
                                        <div class="card-body px-0 py-3">
                                            <h5
                                                class="mb-1 font-sans-serif fw-bold fs-md-0 fs-lg-1 <%= webinar.title.length<26? 'mb-5':''%>">
                                                <%= webinar.title.slice(0,75) %>
                                            </h5>
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <%= webinar.duration %> min
                                            </h6>

                                            <h6 class="card-subtitle mb-2 text-muted text-start">
                                                Time: <%= webinar?.addtimingineastern %> EDT | <%=
                                                        webinar?.addtiminginpacific %> PDT
                                            </h6>

                                            <h6 class="card-subtitle mb-2 text-muted">
                                                Date: <%= webinar.showingDate %>
                                            </h6>
                                            <a class="text-muted fs-1 stretched-link text-decoration-none"
                                                href="/<%= webinar.types=='Seminar'? 'seminar/s':'webinar/allnext'%>/<%=webinar._id%>/<%=webinar.slug%>">
                                                <%= webinar.category %>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <%})%>
                        </div>
                    </div>
                    <!-- end of .container-->

                    <div class="container">
                        <div class="row">
                            <% recordedWebinar=allWebinar.filter(({status})=> status == 'Recorded') %>
                                <% if (recordedWebinar.length) { %>
                                    <h1 class="header-title display-4 header text-start mb-5"> RECORDED</h1>
                                    <% } %>
                                        <% recordedWebinar.forEach((webinar)=> { %>
                                            <div class="col-sm-6 col-lg-4 mb-4 scale">
                                                <div class="card border-0 h-100">
                                                    <div class="position-relative">
                                                        <img class="w-100"
                                                            src="<%=webinar.image.filename? '/images/'+webinar.image.filename:webinar.image.url%>"
                                                            alt="<%= webinar.image.filename%>" width="250"
                                                            height="210" />
                                                        <div class="course-logo">
                                                            <img src="<%= webinar?.portfolio?.image?.filename? '/images/'+webinar?.portfolio?.image?.filename : webinar?.portfolio?.image?.url%>"
                                                                alt="logo" width="68" height="68" />
                                                        </div>
                                                    </div>
                                                    <div class="card-body px-0 py-3">
                                                        <h5
                                                            class="mb-1 font-sans-serif fw-bold fs-md-0 fs-lg-1 <%= webinar.title.length<26? 'mb-5':''%>">
                                                            <%= webinar.title.slice(0,75) %>
                                                        </h5>
                                                        <h6 class="card-subtitle mb-2 text-muted">
                                                            <%= webinar.duration %> min %>
                                                        </h6>
                                                        <a class="text-muted fs-1 stretched-link text-decoration-none"
                                                            href="/<%= webinar.types=='Seminar'? 'seminar/s':'webinar/allnext'%>/<%=webinar._id%>/<%=webinar.slug%>">
                                                            <%= webinar.category %>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <%})%>
                        </div>
                    </div>
                    <!-- end of .container-->

                </section>
                <!-- <section> close ============================-->
                <!-- ============================================-->
            </div>
        </div>
    </div>

    <!-- script to manipulate query -->
    <%- include('partials/productFilter.ejs');%>

        <%- include("./layouts/footer"); -%>