<%- include('layouts/header') %>
    <div class="container-lg px-lg-6 px-sm-3 mb-6 mt-sm-6 mt-3">
        <div class="card p-3">
            <h2 class="card-title text-center mb-3">Contact Us</h2>
            <div class="card-body">
                <p class="card-text fs-2 d-inline me-4 mb-3"><i class="bi bi-telephone-fill"></i> Call Us:
                    <a href="tel:+11239237988" class="text-decoration-none">
                        +11239237988</a>
                </p>
                <p class="card-text fs-2 d-inline mb-3"><i class="bi bi-envelope-fill"></i> Email:
                    <a href="mailto:contact@skillpreceptor.com" class="text-decoration-none">
                        contact@skillpreceptor.com</a>
                </p>
                <p class="card-text fs-2 mt-3">
                    <i class="bi bi-building"></i> Office Address: <span class="fw-medium">1309 Coffine Avenue
                        STE
                        1200 Sheridan, Wyoming
                        82801</span>
                </p>
            </div>
        </div>
    </div>
    <div class="container-lg px-lg-6 px-sm-3 pb-9 pt-0">
        <div class="row gap-3">
            <div class="col col-md-6">
                <div class="card mb-4 shadow" style="height: 400px;">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2831.8349944208803!2d-106.940957!3d44.7841692!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5335f009b7255555%3A0x7037fbf770c90986!2s1309%20Coffeen%20Ave%20ST%201200%2C%20Sheridan%2C%20WY%2082801%2C%20USA!5e0!3m2!1sen!2sin!4v1655454163951!5m2!1sen!2sin"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
            <div class="col col-md-5">
                <form action="/customer-feedback/contact" method="post" class="shadow p-3">
                    <p class="fs-2 text-center">LEAVE A MESSAGE</p>
                    <div class="form-group mb-3">
                        <input type="text" class="form-control rounded-0" name="name" id="name" placeholder="Your Name">
                    </div>
                    <div class="form-group mb-3">
                        <input type="email" class="form-control rounded-0" name="email" id="email"
                            placeholder="Your Email">
                    </div>
                    <div class="form-group mb-3">
                        <input type="tel" class="form-control rounded-0" name="phone" id="phone"
                            placeholder="Your Phone">
                    </div>
                    <div class="form-group mb-3">
                        <textarea type="text" class="form-control rounded-0" name="message" id="message"
                            placeholder="Your Message" rows="3"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <div class="g-recaptcha" data-sitekey="<%= process.env.GOOGLE_SITE_KEY%>"></div>
                        <br />
                        <p class="text-danger">
                            <%= (typeof captcha_error=='undefined' )? '' :captcha_error %>
                        </p>
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </form>
            </div>
        </div>

    </div>
    <%- include('partials/reCaptcha') %>
        <%- include('layouts/footer') %>