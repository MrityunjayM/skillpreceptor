<div class="col-sm-6 col-lg-3 mb-4 scale">
    <div class="card border-0 h-100">
        <div class="position-relative">
            <img class="w-100" src="<%= doc.image.filename? '/images/'+doc.image.filename : doc.image.url%>"
                alt="<%= doc.image.filename%>" width="250" height="210" />
            <div class="course-logo">
                <img src="<%= doc?.portfolio?.image?.filename? '/images/'+doc?.portfolio?.image?.filename : doc?.portfolio?.image?.url%>"
                    alt="logo" width="68" height="68" />
            </div>
        </div>
        <div class="card-body px-0 py-3">
            <h5 class="product-tile mb-1 font-sans-serif fw-bold fs-md-0 fs-lg-1 <%= doc.title.length<26? 'mb-5':''%>">
                <%= doc.title.slice(0,75) %>
            </h5>
            <% if (doc.status=='Live' ) { %>
                <p class="fw-medium mb-2 text-secondary" style="font-size: 1rem !important;">
                    Instructor: <%= doc?.portfolio?.name %>
                </p>
                <h6 class="card-subtitle mb-2 text-muted">
                    Date: <%= doc.showingDate %>
                </h6>

                <h6 class="card-subtitle mb-2 text-muted text-start">
                    Time: <%= doc?.addtimingineastern %> EDT | <%= doc?.addtiminginpacific %> PDT
                </h6>
                <h6 class="card-subtitle mb-2 text-muted">
                    Duration: <%= doc.duration %> Mins
                </h6>

                <% } %>
                    <a class="text-muted fs--1 stretched-link text-decoration-none product"
                        href="/<%= doc.types=='Seminar'?'seminar': 'webinar'%>/<%=doc.webinarId%>/<%=doc.slug%>">
                        <%= doc.category %>
                    </a>
        </div>
    </div>
</div>